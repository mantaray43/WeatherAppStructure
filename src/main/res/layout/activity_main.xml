<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_lg4"
    android:baselineAligned="false"
    android:id="@+id/background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/date"
            android:textColor="#24090b" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textSize="25sp"
            android:id="@+id/location"
            android:paddingTop="10dp"
            android:clickable="false" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight="1.3">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:text="@string/tempLabel"
                android:gravity="center"
                android:id="@+id/tempLabel"
                android:layout_weight="1.6"
                android:textColor="#270809"
                android:background="#f0a42e" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="55sp"
                android:gravity="center_horizontal"
                android:id="@+id/currenttemp"

                android:layout_weight="1"
                android:textColor="#2f090b" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/icon"
                android:gravity="center_horizontal"
                android:src="@drawable/sunstandin"
                android:layout_weight="1" />


        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/hourly"
            android:textColor="#ffffff"
            android:background="#f4db6a"
            android:smoothScrollbar="true"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1.5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:textSize="15dp"
            android:text="@string/snarky"
            android:id="@+id/snarky"
            android:layout_weight="2.6"
            android:gravity="center_horizontal"
            android:textColor="#340607"
            android:background="#f0a42e" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:src="@drawable/adventure_pantsstandin"
            android:layout_weight="1"
            android:baselineAlignBottom="false" />
    </LinearLayout>



</LinearLayout>